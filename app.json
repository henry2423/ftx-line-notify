{
    "name": "FTX Payments Line Bot",
    "description": "Lint bot to gather FTX funding payment infotmation",
    "keywords": [
        "ftx",
        "line",
        "funding payment"
    ],
    "env": {
        "line_api_key": {
            "description": "LINE bot api token",
            "required": true
        },
        "ftx_api_key": {
            "description": "FTX account api key",
            "required": true
        },
        "ftx_api_secret": {
            "description": "FTX account api secret",
            "required": true
        },
        "ftx_sub_account": {
            "description": "FTX sub-account name",
            "required": true
        }
    }
}